<h1>Tool Invenotry</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <th>Tool Barcode</th>
      <th>Description</th>
      <th></th>
    </thead>

    <tbody>
      <% @tools.each do |tool| %>
        <tr>
          <td><%= tool.tool_barcode %></td>
          <td><%= sanitize(tool.description) %></td>
          <td><%= button_to 'Add to issuance', line_items_path(tool_id: tool) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>